<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:stretchColumns="0,1,2,3"
    android:background="@color/black">

    <TableRow android:background="@color/darkGray"  >

        <TextView
            android:layout_span="4"
            android:backgroundTint="@color/darkGray"
            android:padding="20dp"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="30dp"

            />
    </TableRow>

    <TableRow>
        <Button

            android:text="AC"
            android:textAlignment="center"
            android:textSize="30dp"

            android:paddingBottom="10dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            

        />
        <Button
            android:text="+/-"
            android:textAlignment="center"
            android:textSize="30dp"

            android:paddingBottom="10dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
        />
        <Button
            android:text="%"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
        />
        <Button
            android:text="/"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
        />
    </TableRow>

    <TableRow>
        <Button
            android:text="7"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="8"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="9"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="x"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
    </TableRow>

    <TableRow>
        <Button
            android:text="4"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="5"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="6"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="-"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
    </TableRow>

    <TableRow>
        <Button
            android:text="1"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="2"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="3"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="4"
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
    </TableRow>

    <TableRow>

        <Button
            android:text="0"
            android:textAlignment="center"
            android:layout_span="2"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="  . "
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
        <Button
            android:text="="
            android:textAlignment="center"
            android:textSize="30dp"
            android:backgroundTint="@color/lighterGray"
            android:textColor="@color/white"
            />
    </TableRow>

</TableLayout>