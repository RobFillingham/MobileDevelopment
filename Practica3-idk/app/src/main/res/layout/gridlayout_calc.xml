<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6"
    android:background="@color/navy"
    android:orientation="horizontal">
    

    <TextView
        android:layout_columnSpan="4"
        android:text="0"
        android:textSize="60dp"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:textAlignment="viewEnd"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"

    />

    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="AC" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="+/-" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="%" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="/" android:layout_columnWeight="1"/>

    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="7" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="8" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="9" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="X" android:layout_columnWeight="1"/>

    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="4" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="5" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="6" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="-" android:layout_columnWeight="1"/>

    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="1" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="2" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="3" android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="4" android:layout_columnWeight="1"/>

    <Button android:layout_marginRight="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="0" android:layout_columnWeight="1" android:layout_columnSpan="2"/>
    <Button android:layout_marginRight="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="." android:layout_columnWeight="1"/>
    <Button android:layout_marginRight="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="=" android:layout_columnWeight="1"/>
    
    


</GridLayout>