<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="90dp"
        android:textAlignment="viewEnd"
        android:layout_alignParentTop="true"
        android:id="@+id/number"
        android:background="@color/black"
        android:textColor="@color/white"
    />

    <Button android:background="@color/darkGray" android:id="@+id/ac" android:layout_below="@+id/number" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white"  android:textSize="40dp" android:text="AC" />
    <Button android:background="@color/darkGray" android:id="@+id/plusMinus" android:layout_below="@+id/number" android:layout_toRightOf="@+id/ac" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white"  android:textSize="40dp" android:text="+/-" />
    <Button android:id="@+id/percent" android:layout_below="@+id/number" android:layout_toRightOf="@+id/plusMinus" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/darkGray" android:textSize="40dp" android:text="%" />
    <Button android:id="@+id/division" android:layout_below="@+id/number" android:layout_toRightOf="@+id/percent" android:layout_width="106dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/orange" android:textSize="40dp" android:text="/" />

    <Button android:id="@+id/seven" android:layout_below="@+id/ac" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="7" />
    <Button android:id="@+id/eight" android:layout_below="@+id/plusMinus" android:layout_toRightOf="@+id/ac" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="8" />
    <Button android:id="@+id/nine" android:layout_below="@+id/percent" android:layout_toRightOf="@+id/plusMinus" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="9" />
    <Button android:id="@+id/x" android:layout_below="@+id/division" android:layout_toRightOf="@+id/percent" android:layout_width="106dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/orange" android:textSize="40dp" android:text="X" />

    <Button android:id="@+id/four" android:layout_below="@+id/seven" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="4" />
    <Button android:id="@+id/five" android:layout_below="@+id/eight" android:layout_toRightOf="@+id/ac" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="5" />
    <Button android:id="@+id/six" android:layout_below="@+id/nine" android:layout_toRightOf="@+id/plusMinus" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="6" />
    <Button android:id="@+id/minus" android:layout_below="@+id/x" android:layout_toRightOf="@+id/percent" android:layout_width="106dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/orange" android:textSize="40dp" android:text="-" />

    <Button android:id="@+id/three" android:layout_below="@+id/four" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="3" />
    <Button android:id="@+id/two" android:layout_below="@+id/five" android:layout_toRightOf="@+id/ac" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="2" />
    <Button android:id="@+id/one" android:layout_below="@+id/six" android:layout_toRightOf="@+id/plusMinus" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="1" />
    <Button android:id="@+id/plus" android:layout_below="@+id/minus" android:layout_toRightOf="@+id/percent" android:layout_width="106dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/orange" android:textSize="40dp" android:text="+" />

    <Button android:id="@+id/cero" android:layout_below="@+id/three" android:layout_width="204dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="0" />
    <Button android:id="@+id/dot" android:layout_below="@+id/one" android:layout_toRightOf="@+id/plusMinus" android:layout_width="102dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/lighterGray" android:textSize="40dp" android:text="." />
    <Button android:id="@+id/equal" android:layout_below="@+id/plus" android:layout_toRightOf="@+id/percent" android:layout_width="106dp" android:layout_height="158dp"  android:textColor="@color/white" android:background="@color/orange" android:textSize="40dp" android:text="=" />

</RelativeLayout>