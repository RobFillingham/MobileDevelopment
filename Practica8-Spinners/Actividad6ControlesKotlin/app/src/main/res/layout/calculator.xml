<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6"
    android:background="@color/navy"
    android:orientation="horizontal"
    android:id="@+id/main">


    <TextView
        android:layout_columnSpan="4"
        android:text="0"
        android:textSize="60dp"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:textAlignment="viewEnd"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:id="@+id/text"

        />

    <Button android:id="@+id/ac" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="AC" android:layout_columnWeight="1"/>
    <Button android:id="@+id/plusMinus" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="+/-" android:layout_columnWeight="1"/>
    <Button android:id="@+id/module" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="%" android:layout_columnWeight="1"/>
    <Button android:id="@+id/division" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="/" android:layout_columnWeight="1"/>

    <Button android:id="@+id/seven" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="7" android:layout_columnWeight="1"/>
    <Button android:id="@+id/eight" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="8" android:layout_columnWeight="1"/>
    <Button android:id="@+id/nine" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="9" android:layout_columnWeight="1"/>
    <Button android:id="@+id/times" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="X" android:layout_columnWeight="1"/>

    <Button android:id="@+id/four" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="4" android:layout_columnWeight="1"/>
    <Button android:id="@+id/five" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="5" android:layout_columnWeight="1"/>
    <Button android:id="@+id/six" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="6" android:layout_columnWeight="1"/>
    <Button android:id="@+id/minus" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="-" android:layout_columnWeight="1"/>

    <Button android:id="@+id/one" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="1" android:layout_columnWeight="1"/>
    <Button android:id="@+id/two" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="2" android:layout_columnWeight="1"/>
    <Button android:id="@+id/three" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="3" android:layout_columnWeight="1"/>
    <Button android:id="@+id/plus" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="+" android:layout_columnWeight="1"/>

    <Button android:id="@+id/zero" android:layout_marginRight="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="0" android:layout_columnWeight="1" android:layout_columnSpan="2"/>
    <Button android:id="@+id/dot" android:layout_marginRight="2dp" android:textColor="@color/navy" android:layout_rowWeight="1" android:background="@color/white" android:textSize="40dp" android:text="." android:layout_columnWeight="1"/>
    <Button android:id="@+id/equal" android:layout_marginRight="2dp" android:textColor="@color/white" android:layout_rowWeight="1" android:background="@color/darkGray" android:textSize="40dp" android:text="=" android:layout_columnWeight="1"/>




</GridLayout>